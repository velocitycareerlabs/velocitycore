{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com",
      "token": "{{ secrets.GITHUB_TOKEN }}"
    }
  ],
  "timezone": "Asia/Jerusalem",
  "extends": [
    "config:best-practices",  
    "npm:unpublishSafe",
    "group:allDigest",
    "group:linters",
    "group:jsTest",
    "group:postcss",
    "group:react",
    "group:vite",
    "security:openssf-scorecard"
  ],
  "prHourlyLimit": 10,
  "addLabels": ["dependencies"],
  "automerge": true,
  "schedule": ["* 0-2 * * 1,3"],
  "packageRules": [    
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "schedule": ["* 0-2 1,15 * *"]
    },
    {
      "groupName": "group: fastify packages",
      "matchPackageNames": [
        "@fastify/{/,}**",
        "fastify{/,}**",
        "avvio{/,}**",
        "fast-json{/,}**",
        "pino{/,}**"
      ]
    },
    {
      "matchFileNames": [
        "eng/**",
        ".github/**",
        "docker*.yml",
        "Dockerfile*"
      ],
      "addLabels": ["eng"]
    },
    {
      "matchFileNames": [
        "contracts/**"
      ],
      "addLabels": ["contracts"],
      "automerge": false,
      "schedule": ["* 0-2 1,15 * *"]
    },
    {
      "matchPackageNames": [
        "aws-sdk"
      ],
      "extends": ["schedule:monthly"]
    },
    {
      "matchPackageNames": [
        "nx",
        "@nx/{/,}**"
      ],
      "enabled": false
    }
  ]
}
