{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com",
      "token": "{{ secrets.GITHUB_TOKEN }}"
    }
  ],
  "timezone": "Asia/Jerusalem",
  "extends": [
    "config:best-practices",  
    "npm:unpublishSafe",
    "group:linters",
    "group:jsTest",
    "group:postcss",
    "group:react",
    "group:vite",
    "security:openssf-scorecard",
    "schedule:daily"
  ],
  "prHourlyLimit": 10,
  "addLabels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "fastify packages",
      "matchPackageNames": [
        "@fastify/{/,}**",
        "fastify{/,}**",
        "avvio{/,}**",
        "fast-json{/,}**",
        "pino{/,}**"
      ]
    },
    {
      "matchFileNames": [
        "packages/**",
        "servers/**",
        "samples/**",
        "tools/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "extends": [
        "schedule:daily"
      ]
    },
    {
      "matchUpdateTypes": [    
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchFileNames": [
        "eng/**",
        ".github/**",
        "docker*.yml",
        "Dockerfile*"
      ],
      "addLabels": [
        "eng"
      ],
      "extends": [
        "schedule:weekly"
      ]
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchFileNames": [
        "contracts/**"
      ],
      "addLabels": [
        "contracts"
      ],
      "extends": [
        "schedule:weekly"
      ]
    },
    {
      "matchPackageNames": [
        "aws-sdk"
      ],
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "matchPackageNames": [
        "nx",
        "@nx/{/,}**"
      ],
      "enabled": false
    }
  ]
}
