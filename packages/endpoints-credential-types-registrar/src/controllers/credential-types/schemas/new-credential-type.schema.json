{
  "$id": "new-credential-type",
  "title": "new-credential-type",
  "type": "object",
  "properties": {
    "credentialType": {
      "type": "string",
      "description": "the credential type in camel case",
      "minLength": 1
    },
    "credentialGroup": {
      "type": "string",
      "enum": [
        "Contact",
        "IdDocument",
        "IdentityIssuer",
        "Career"
      ]
    },
    "schemaName": {
      "type": "string",
      "description": "name of the schema file",
      "minLength": 1
    },
    "recommended": {
      "type": "boolean",
      "default": false,
      "description": "whether the credential type is recommended"
    },
    "linkedIn": {
      "type": "object",
      "properties": {
        "shareInProfile": {
          "type": "boolean"
        },
        "shareInFeed": {
          "type": "boolean"
        }
      }
    },
    "linkedinProfileCompatible": {
      "type": "boolean",
      "default": false,
      "description": "whether the credential type is compatible with share to linkedin profile"
    },
    "jsonldContext": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "issuerCategory": {
      "type": "string",
      "description": "the issuer category",
      "enum": [
        "ContactIssuer",
        "IdDocumentIssuer",
        "RegularIssuer"
      ],
      "default": "RegularIssuer"
    },
    "layer1": {
      "type": "boolean"
    },
    "schemaUrl": {
      "type": "string",
      "format": "uri"
    },
    "displayDescriptorUrls": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+(_[A-Z]{2})?$": {
          "type": "string",
          "format": "uri"
        }
      },
      "minProperties": 1,
      "required": [
        "en"
      ]
    },
    "formSchemaUrls": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+(_[A-Z]{2})?$": {
          "type": "string",
          "format": "uri"
        }
      },
      "minProperties": 1,
      "required": [
        "en"
      ]
    },
    "defaultSignatureAlgorithm": {
      "type": "string",
      "enum": ["SECP256K1", "ES256", "RS256"],
      "default": "ES256"
    }
  },
  "required": [
    "credentialType",
    "credentialGroup",
    "schemaName",
    "layer1",
    "schemaUrl",
    "displayDescriptorUrls"
  ]
}
