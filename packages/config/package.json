{
  "name": "@velocitycareerlabs/config",
  "version": "0.5.0-build",
  "description": "Generic configuration file for Velocity Projects",
  "repository": "https://github.com/velocitycareerlabs/velocitycore",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "NODE_ENV=test node --test --test-concurrency=1 --experimental-test-module-mocks --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout 'test/**/*.test.js'",
    "test:ci": "NODE_ENV=test node --test --test-concurrency=1 --experimental-test-module-mocks --experimental-test-coverage --test-reporter=spec --test-reporter=junit --test-reporter-destination=stdout --test-reporter-destination=test-results.junit.xml 'test/**/*.test.js'",
    "lint": "eslint --ext .js .",
    "lint:ci": "eslint . --format json >> eslint-results.json",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "author": "Yauheni Pozdnyakov",
  "license": "Apache-2.0",
  "dependencies": {
    "env-var": "^7.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "eslint-plugin-autofix": "1.1.0",
    "eslint-plugin-prefer-arrow-functions": "3.6.2",
    "expect": "29.7.0"
  },
  "nx": {
    "tags": ["lib"]
  }
}
